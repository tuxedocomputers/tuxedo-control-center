{
  "name": "tuxedo-control-center",
  "version": "1.1.0",
  "main": "./dist/tuxedo-control-center/e-app/e-app/main.js",
  "author": {
    "name": "TUXEDO Computers GmbH",
    "email": "tux@tuxedocomputers.com",
    "url": "https://tuxedocomputers.com"
  },
  "license": "GPL-3.0",
  "homepage": "https://tuxedocomputers.com",
  "scripts": {
    "ver": "sh build-src/inc-version.sh",
    "inc-version-patch": "npm version patch --no-git-tag-version && cd src && npm version patch --no-git-tag-version",
    "inc-version-minor": "npm version minor --no-git-tag-version && cd src && npm version minor --no-git-tag-version",
    "inc-version-major": "npm version major --no-git-tag-version && cd src && npm version major --no-git-tag-version",
    "start": "electron ./dist/tuxedo-control-center",
    "build": "run-s clean build-electron build-service build-native build-ng copy-files",
    "build-prod": "run-s clean build-electron build-service build-native build-ng-prod copy-files",
    "build-ng": "npm run copy-changelog && ng build",
    "build-ng-prod": "npm run copy-changelog && ng build --prod",
    "build-electron": "tsc -p ./src/e-app",
    "build-service": "tsc -p ./src/service-app && cp ./src/package.json ./dist/tuxedo-control-center/service-app/package.json && run-s bundle-service",
    "bundle-service": "pkg --target node10-linux-x64 --output ./dist/tuxedo-control-center/data/service/tccd ./dist/tuxedo-control-center/service-app/package.json",
    "build-native": "node-gyp configure && node-gyp rebuild",
    "copy-files": "run-s copy-package-json copy-dist-files copy-native",
    "copy-native": "mkdir -p ./dist/tuxedo-control-center/service-app/native-lib && cp ./build/Release/TuxedoIOAPI.node ./dist/tuxedo-control-center/data/service",
    "copy-package-json": "cp ./src/package.json ./dist/tuxedo-control-center/package.json",
    "copy-dist-files": "cp -r ./src/dist-data ./dist/tuxedo-control-center/data",
    "copy-changelog": "cp CHANGELOG.md ./src/ng-app/assets/",
    "pack": "npm run build && ts-node ./build-src/electron-builder.ts",
    "pack-prod": "npm run build-prod && ts-node ./build-src/electron-builder.ts",
    "clean": "rm -rf ./dist; rm -rf ./build",
    "tests": "npm run test-common",
    "test-common": "ts-node node_modules/jasmine/bin/jasmine --config=./src/common/jasmine.json",
    "test-ng": "ng test --watch=false",
    "test-ng-e2e": "ng e2e",
    "install-build-dep": "curl -sL https://deb.nodesource.com/setup_11.x | sudo -E bash - && sudo apt install nodejs autoconf automake build-essential gcc g++ make rpm",
    "start-watch": "run-s clean build-electron build-service build-native copy-files && npm run watch-ng-and-electron",
    "watch-ng-and-electron": "run-p start-ng-watch start-electron-watch",
    "start-ng-watch": "ng build --watch",
    "start-electron-watch": "electron ./dist/tuxedo-control-center --watch",
    "gen-lang": "ng xi18n --out-file src/ng-app/assets/locale/lang.xlf && ngx-extractor -i \"src/ng-app/**/*.ts\" -f xlf -o src/ng-app/assets/locale/lang.xlf"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~8.0.1",
    "@angular/compiler": "~8.0.1",
    "@angular/core": "~8.0.1",
    "@angular/forms": "~8.0.1",
    "@angular/platform-browser": "~8.0.1",
    "@angular/platform-browser-dynamic": "~8.0.1",
    "@angular/router": "~8.0.1",
    "chart.js": "^2.9.3",
    "dbus-next": "^0.8.2",
    "ng2-charts": "^2.4.2",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/animations": "^8.0.3",
    "@angular/cdk": "^8.1.2",
    "@angular/cli": "~8.0.4",
    "@angular/compiler-cli": "~8.0.1",
    "@angular/language-service": "~8.0.1",
    "@angular/material": "^8.1.2",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "@types/jasmine": "^3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.0.0",
    "angular-gauge": "^3.1.2",
    "codelyzer": "^5.0.0",
    "electron": "^11.5.0",
    "electron-builder": "^20.44.4",
    "electron-reload": "^1.5.0",
    "hammerjs": "^2.0.8",
    "jasmine": "^3.4.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "mock-fs": "^4.10.1",
    "ngx-electron": "^2.1.1",
    "ngx-markdown": "^8.2.1",
    "node-addon-api": "^1.7.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.0",
    "protractor": "~5.4.0",
    "ts-node": "^7.0.1",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
